{
  "editor.fontSize": 14,
  "editor.formatOnSave": true, // 每次保存的时候自动格式化
  "editor.codeActionsOnSave": {
    "source.fixAll": true
    // "source.fixAll.eslint": true // 开启 ESLint 的 source action
    // "source.fixAll.stylelint": true, // 开启 stylelint 的 source action
  }, // 每次保存的时候进行修复
  "javascript.format.enable": false, // 避免与 eslint 格式化冲突
  "typescript.format.enable": false, // 避免与 eslint 格式化冲突
  "editor.tabSize": 2, // 重新设定tabSize
  "editor.defaultFormatter": "esbenp.prettier-vscode", // 编辑器默认格式化工具使用 esbenp 的 prettier VSCode 插件；此插件会根据项目根目录下的 `.prettierrc.js` 配置来格式化代码
  "prettier.configPath": ".prettierrc.js", // 配置 prettier 插件的配置文件路径
  "prettier.enable": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }, // JavaScript格式化工具，使用 prettier
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // 配置 ESLint 检查的文件类型（无意义，可注释）
  // "eslint.validate": ["javascript", "vue", "html", "typescript"],
  "eslint.options": {
    // 指定vscode的eslint所处理的文件的后缀
    "extensions": [".js", ".vue", ".ts", ".tsx", ".nvue"]
  },
  "vetur.format.enable": false, // 关闭 vetur 的格式化
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src"
  }, // Vue路径提示配置
  "files.associations": {
    "*.nvue": "html"
  } // 把 nvue 文件当成 html 文件
}
